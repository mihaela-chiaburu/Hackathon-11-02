<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="#FFFAF7"/> <!-- Background color -->
            <corners android:radius="30dp"/> <!-- Round corners -->
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="#6C5B82"/> <!-- Progress color -->
                <corners android:radius="30dp"/> <!-- Round corners -->
            </shape>
        </clip>
    </item>
</layer-list>
